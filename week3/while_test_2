#include<stdio.h>

//class average grades calculator

int main(void){

    int total = 0;
    int gcounter = 1;
    int grade;
    float avg;
    printf("Please input the grades:\n");

    while(gcounter < 10){
        scanf("%d\n",&grade);//Input grades
        total += grade;//calculate sum
        gcounter++;
    }
    avg = (float)total/10;
    printf("Class average grade is %.1f",avg);
}
